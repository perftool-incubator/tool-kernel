{
    "workshop": {
        "schema": {
            "version": "2020.03.02"
        }
    },
    "userenvs": [
        {
            "name": "default",
            "requirements": [
                "bzip2_src", "bison_src", "gettext_src", "flex_src", "tools_src", "libtraceevent_src", "libtracefs_src", "tracecmd_src"
            ]
        }
    ],
    "requirements": [
        {
            "name": "bzip2_src",
            "type": "source",
            "source_info": {
                "url": "https://www.sourceware.org/pub/bzip2/bzip2-1.0.8.tar.gz",
                "filename": "bzip2-1.0.8.tar.gz",
                "commands": {
                    "unpack": "tar -zxf bzip2-1.0.8.tar.gz",
                    "get_dir": "tar -ztf bzip2-1.0.8.tar.gz | head -n 1 | awk -F/ '{print $1}'",
                    "commands": [
                        "make install",
                        "ldconfig"
                    ]
                }
            }
        },
        {
            "name": "bison_src",
            "type": "source",
            "source_info": {
                "url": "http://ftp.gnu.org/gnu/bison/bison-3.7.tar.xz",
                "filename": "bison-3.7.tar.xz",
                "commands": {
                    "unpack": "tar -Jxf bison-3.7.tar.xz",
                    "get_dir": "tar -Jtf bison-3.7.tar.xz | head -n 1",
                    "commands": [
                        "./configure",
                        "make install",
                        "ldconfig"
                    ]
                }
            }
        },
        {
            "name": "gettext_src",
            "type": "source",
            "source_info": {
                "url": "https://ftp.gnu.org/pub/gnu/gettext/gettext-0.21.tar.gz",
                "filename": "gettext-0.21.tar.gz",
                "commands": {
                    "unpack": "tar -zxf gettext-0.21.tar.gz",
                    "get_dir": "tar -ztf gettext-0.21.tar.gz | head -n 1",
                    "commands": [
                        "./configure",
                        "make install",
                        "ldconfig"
                    ]
                }
            }
        },
        {
            "name": "flex_src",
            "type": "source",
            "source_info": {
                "url": "https://github.com/westes/flex/files/981163/flex-2.6.4.tar.gz",
                "filename": "flex-2.6.4.tar.gz",
                "commands": {
                    "unpack": "tar -zxf flex-2.6.4.tar.gz",
                    "get_dir": "tar -ztf flex-2.6.4.tar.gz | head -n 1",
                    "commands": [
                        "./autogen.sh",
                        "./configure CFLAGS=' -D_GNU_SOURCE'",
                        "make install",
                        "ldconfig"
                    ]
                }
            }
        },
        {
            "name": "tools_src",
            "type": "source",
            "source_info": {
                "url": "https://cdn.kernel.org/pub/linux/kernel/v5.x/linux-5.10.5.tar.xz",
                "filename": "linux-5.7.tar.xz",
                "commands": {
                    "unpack": "tar -Jxf linux-5.7.tar.xz",
                    "get_dir": "tar -Jtf linux-5.7.tar.xz | head -n 1",
                    "commands": [
                        "make -C tools/ perf_install prefix=/usr/",
                        "make -C tools/ turbostat_install prefix=/usr/",
                        "make -C tools/ intel-speed-select_install prefix=/usr/",
                        "ldconfig",
                        "rm -rf *"
                    ]
                }
            }
        },
        {
            "name": "libtraceevent_src",
            "type": "source",
            "source_info": {
                "url": "https://git.kernel.org/pub/scm/libs/libtrace/libtraceevent.git/snapshot/libtraceevent-1.5.0.tar.gz",
                "filename": "libtraceevent-1.5.0.tar.gz",
                "commands": {
                    "unpack": "tar -zxf libtraceevent-1.5.0.tar.gz",
                    "get_dir": "tar -ztf libtraceevent-1.5.0.tar.gz | head -n 1",
                    "commands": [
                        "make install",
                        "ldconfig"
                    ]
                }
            }
        },
        {
            "name": "libtracefs_src",
            "type": "source",
            "source_info": {
                "url": "https://git.kernel.org/pub/scm/libs/libtrace/libtracefs.git/snapshot/libtracefs-1.2.5.tar.gz",
                "filename": "libtracefs-1.2.5.tar.gz",
                "commands": {
                    "unpack": "tar -zxf libtracefs-1.2.5.tar.gz",
                    "get_dir": "tar -ztf libtracefs-1.2.5.tar.gz | head -n 1",
                    "commands": [
                        "make install",
                        "ldconfig"
                    ]
                }
            }
        },
        {
            "name": "tracecmd_src",
            "type": "source",
            "source_info": {
                "url": "https://git.kernel.org/pub/scm/utils/trace-cmd/trace-cmd.git/snapshot/trace-cmd-v3.1.2.tar.gz",
                "filename": "trace-cmd.tar.gz",
                "commands": {
                    "unpack": "tar -zxf trace-cmd.tar.gz",
                    "get_dir": "tar -ztf trace-cmd.tar.gz | head -n 1",
                    "commands": [
                        "make install",
                        "ldconfig"
                    ]
                }
            }
        }
    ]
}
